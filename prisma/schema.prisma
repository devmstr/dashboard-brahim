generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String    @id @default(cuid())
  userId             String
  providerType       String
  providerId         String
  providerAccountId  String
  refreshToken       String?
  accessToken        String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])

  @@unique([providerId, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  accessToken  String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model User {
  id           String    @id @default(cuid())
  role         String?
  username     String    @unique
  email        String?   @unique
  passwordHash String
  employeeId   Int       @unique
  image        String?
  accounts     Account[]
  sessions     Session[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model VerificationRequest {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
}

model Country {
  id      Int    @id @default(autoincrement())
  code    String @unique
  name    String
  name_ar String
}

model Wilaya {
  id      Int     @id @default(autoincrement())
  code    String  @unique
  name_ar String
  name    String
  Dairas  Daira[]
}

model Daira {
  id       Int    @id @default(autoincrement())
  code     String
  name_ar  String
  name     String
  wilayaId Int
  Wilaya   Wilaya @relation(fields: [wilayaId], references: [id])
}

model Radiator {
  id          Int        @id @default(autoincrement())
  barcode     String?
  description String
  label       String?
  hash        String     @unique
  brand       String?
  model       String?
  isValidated Boolean?   @default(false)
  createdAt   DateTime?  @default(now())
  updatedAt   DateTime?  @updatedAt
  // relations 
  core        Core?      @relation(fields: [coreId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  coreId      Int?       @unique
  collector   Collector? @relation(fields: [collectorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  collectorId Int?       @unique

  @@index([barcode])
  @@index([hash])
  @@map("RadiatorStock")
}

model Core {
  id        Int        @id @default(autoincrement())
  height    Int
  width     Int
  tube      String?
  fins      String
  finsPitch Int?
  rows      Int
  Radiator  Radiator[]
}

model Collector {
  id          Int        @id @default(autoincrement())
  height      Int
  width       Int
  lowerHeight Int?
  lowerWidth  Int?
  position    String?
  tightening  String?
  Radiator    Radiator[]
}

model Exhaust {
  id          Int       @id @default(autoincrement())
  barcode     String?
  label       String?
  description String
  type        String
  painting    String
  isValidated Boolean?  @default(false)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  hash        String    @unique
  car         Car[]
}

model Brand {
  id           Int    @id @default(autoincrement())
  name         String @unique
  abbreviation String
  Cars         Car[]
}

model Car {
  id        Int      @id @default(autoincrement())
  model     String?
  type      String?
  subType   String?
  fuel      String?
  engine    String?
  Exhaust   Exhaust? @relation(fields: [exhaustId], references: [id])
  exhaustId Int?
  Brand     Brand?   @relation(fields: [brandId], references: [id])
  brandId   Int?
}
